	"authors": [
		"Partacus-SPQR"
	],
	"contact": {
		"homepage": "https://github.com/Partacus-SPQR/VillagerCycle",
		"sources": "https://github.com/Partacus-SPQR/VillagerCycle"
	},
	"license": "MIT",
	"icon": "assets/villagercycle/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.villagercycle.VillagerCycleMod"
		],
		"client": [
			"com.villagercycle.client.VillagerCycleClient"
		]
	},
	"mixins": [
		"villagercycle.mixins.json",
		{
			"config": "villagercycle.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.9",
		"minecraft": "~1.21.10",
		"java": ">=21",
		"fabric-api": "*"
	}
